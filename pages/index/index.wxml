<!-- 购车案例 -->
<checkbox-group bindchange="changeEvent">
  <view class="cart-box">
    <view class="item" wx:for="{{cartList}}" wx:key="id">
      <view class="item-a">
        <!-- 这里的 checkbox 的 value 的值的绑定只要是 唯一的 不重复的的数据 都可以 -->
        <checkbox value="{{item.id}}" checked="{{item.isSelected}}" data-index="{{item.id}}" bindtap="changeSel"></checkbox>
      </view>
      <view class="item-b">
        <image src="{{item.image}}"></image>
      </view>
      <view class="item-c">
        <view class="top">
          <view class="name">{{item.name}}</view>
        </view>
        <!-- 步进器, 加减选择数量用的 -->
        <view class="bottom">
          <view class="cut" bindtap="cutNum" data-num="{{item.num}}"
          data-idx="{{index}}">-</view>
          <view class="num">{{item.num}}</view>
          <view class="add" bindtap="addNum"
          data-num="{{item.num}}"
          data-idx="{{index}}">+</view>
        </view>
      </view>
      <view class="item-d">
        <view class="price">￥{{item.price}}</view>
        <view class="del" data-delindex="{{index}}" bindtap="delList">删除</view>
      </view>
    </view>
  </view>
</checkbox-group>

<!-- 全选按钮 -->
<view class="allCheck">
  <checkbox checked="{{isAllChecked}}" bindtap="changeIsSelected">全选</checkbox>
  <view class="total">￥{{total}}</view>
</view>